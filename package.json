{
  "name": "r1gate-app",
  "version": "1.1.30",
  "description": "RGConnect - Desktop Application for voice communication",
  "main": "main.js",
  "homepage": "https://rgconnect.ru",
  "repository": {
    "type": "git",
    "url": "https://github.com/R1gat3/r1gate-app.git"
  },
  "bugs": {
    "url": "https://github.com/R1gat3/r1gate-app/issues"
  },
  "keywords": [
    "voice",
    "chat",
    "electron",
    "desktop",
    "communication",
    "discord-alternative"
  ],
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": {
    "name": "R1Gate",
    "email": "gaga.gaga.ga@mail.ru",
    "url": "https://rgconnect.ru"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "ru.r1gate.voice",
    "productName": "RGConnect",
    "copyright": "Copyright Â© 2026 RGConnect",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "splashPreload.js",
      "splash.html",
      "icon.png",
      "icon.svg",
      "web/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png",
      "publisherName": "RGConnect"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": false,
      "artifactName": "RGConnect-Setup-${version}.exe",
      "shortcutName": "RGConnect",
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon.png",
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icon.png",
      "category": "Network",
      "artifactName": "RGConnect-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "R1gat3",
      "repo": "r1gate-app"
    }
  }
}
